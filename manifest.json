{
  "manifest_version": 3,
  "name": "AI Prompt Manager",
  "version": "1.0.0",
  "description": "Professionelle Verwaltung und Einfügung von KI-Prompts für claude.ai",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://claude.ai/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  }
}